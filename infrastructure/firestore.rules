rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Portfolios - public read, owner write
    match /portfolios/{portfolioId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }

    // Markers - public read, admin writes only
    match /markers/{markerId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Contents - public read, admin writes only
    match /contents/{contentId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Sessions - used for presentation control: read public, write authenticated presenters
    match /sessions/{sessionId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.presenterId;
    }

    // Analytics events - any client can create events; only admins can read
    match /analytics_events/{eventId} {
      allow create: if true;
      allow read: if request.auth != null && request.auth.token.admin == true;
      allow delete, update: if false;
    }

    // Default: deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}